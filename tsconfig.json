{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "sourceMap": true,
        "isolatedModules": true,
        "noEmit": false,
        "preserveConstEnums": true,
        "removeComments": false,
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.stories.*"]
}
