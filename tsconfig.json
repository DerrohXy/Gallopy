{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "isolatedModules": true,
        "noEmit": false,
        "preserveConstEnums": true,
        "removeComments": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.*",
        "**/*.stories.*"
    ]
}